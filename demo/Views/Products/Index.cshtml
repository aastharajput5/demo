@model IEnumerable<demo.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>
<br>
<a asp-action="Create" class="btn btn-primary">Create New</a>
<br/>
<form asp-action="Index" method="get" class="mb-3">
    <input type="text" name="nameFilter" class="form-control mb-2" placeholder="Search by name" value="@Context.Request.Query["nameFilter"]" />
    <input type="number" step="0.01" name="priceFilter_max" class="form-control mb-2" placeholder="Max price" value="@Context.Request.Query["priceFilter_max"]" />
    <input type="number" step="0.01" name="priceFilter_min" class="form-control mb-2" placeholder="Min price" value="@Context.Request.Query["priceFilter_min"]" />
    <button type="submit" class="btn btn-outline-primary">Filter</button>
</form>

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @await Html.PartialAsync("_ProductRow", item)

        }
    </tbody>
</table>
